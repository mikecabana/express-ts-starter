{
	"include": ["src/**/*"],
	"exclude": ["**/*.spec.ts"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"ts-node": {
		"esm": true
	}
}
